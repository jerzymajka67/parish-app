<main>
  <h2>Events – File Manager</h2>
</main>



<!-- Toolbar -->
<div class="admin-toolbar">
  <% if (currentPath) { %>
    <a class="btn-action"
       href="/admin/events?path=<%= currentPath.split('/').slice(0, -1).join('/') %>">
      ⬆ Up
    </a>
  <% } %>
</div>

<h3>Folder contents</h3>

<% if (items.length === 0) { %>
  <p>Empty folder</p>
<% } else { %>

<form action="/admin/events/delete-selected" method="POST"
      onsubmit="return confirm('Delete selected files and folders?');">

  <input type="hidden" name="currentPath" value="<%= currentPath %>">

  <div id="admin-tree">
    <%- buildTreeHTML(currentPath) %>
  </div>

  <button type="submit" class="btn-action danger">
    Delete Selected
  </button>
</form>

<% } %>

<!-- Upload -->
<form action="/admin/events/upload-image" method="POST"
      enctype="multipart/form-data" style="margin-top:15px;">
  <input type="hidden" name="currentPath" value="<%= currentPath %>">
  <input type="file" name="image" accept="image/*" required>
  <button class="btn-action">Upload Image</button>
</form>

<!-- Create folder -->
<form action="/admin/events/create-folder" method="POST"
      style="margin-top:10px;">
  <input type="hidden" name="currentPath" value="<%= currentPath %>">
  <input type="text" name="folderName" placeholder="New folder name" required>
  <button class="btn-action">Create Folder</button>
</form>

<!-- Expand / collapse -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('#admin-tree .folder-name').forEach(folder => {
    folder.addEventListener('click', e => {
      e.stopPropagation();
      const children = folder.nextElementSibling;
      if (children) children.classList.toggle('hidden');
    });
  });
});
</script>
